{% extends 'base_dashboard.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1 class="dashboard-title">DÃ©tail du post</h1>

    <table class="dashboard-table table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ asset('build/images/post/' ~ post.picture ~ '')}}"/></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ post.creationDate ? post.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="bg-light w-25 m-auto d-flex justify-content-around align-items-center">
        <a class="text-decoration-none text-secondary" href="{{ path('app_post_index', {userId: app.user.id}) }}">back to list</a>
        <a class="text-decoration-none text-secondary" href="{{ path('app_post_edit', {userId: app.user.id, postId: post.id}) }}">edit</a>
        {{ include('user/post/_delete_form.html.twig') }}
    </div>


{% endblock %}
