{% extends 'base_dashboard.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1 class="dashboard-title">Tous les messages</h1>

    <table class="dashboard-table table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.firstName }}</td>
                <td>{{ contact.LastName }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.comment }}</td>
                <td>
                    <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
